<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helde.calculadoraihm.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5
        "
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eText1"
            android:text="@string/eText1"
            android:background="@android:color/transparent"
            android:editable="false"
            android:gravity="right"
            android:textColor="#5b5b5b"
            android:textStyle="bold"
            android:textSize="60dp"
            android:layout_weight="0.25"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eText2"
            android:text="@string/eText2"
            android:background="@android:color/transparent"
            android:editable="false"
            android:gravity="right"
            android:textColor="#5b5b5b"
            android:textStyle="bold"
            android:textSize="60dp"
            android:layout_weight="0.25"/>


    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="bottom">

        <TableRow
            android:layout_width="match_parent">
            <Button android:id="@+id/btnMMais"
                android:layout_weight="1"
                android:text="@string/memoriaMais"/>
            <Button android:id="@+id/btnMMenos"
                android:layout_weight="1"
                android:text="@string/mMenos"/>
            <Button android:id="@+id/btnMShow"
                android:layout_weight="1"
                android:text="@string/mShow"/>
            <Button android:id="@+id/btnMClean"
                android:layout_weight="1"
                android:text="@string/mClean"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btnPercentagem"
                android:layout_weight="1"
                android:text="@string/btnPercentagem" />
            <Button android:id="@+id/btnMaisMenos"
                android:layout_weight="1"
                android:text="@string/btnMaisMenos"/>
            <Button android:id="@+id/raiz"
                android:layout_weight="1"
                android:text="@string/raiz"/>
            <Button android:id="@+id/btn1X"
                android:layout_weight="1"
                android:text="@string/UmSobreX"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btnLimpar"
                android:layout_weight="2"
                android:layout_span="2"
                android:text="@string/btnClean"/>
            <Button android:id="@+id/btnApagarCaractere"
                android:layout_weight="1"
                android:text="@string/btnBack"/>

            <Button android:id="@+id/btnDivisao"
                android:layout_weight="1"
                android:text="@string/btnDivide"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btnSete"
                android:layout_weight="1"
                android:text="@string/btn7"/>

            <Button android:id="@+id/btnOito"
                android:layout_weight="1"
                android:text="@string/btn8"/>

            <Button android:id="@+id/btnNove"
                android:layout_weight="1"
                android:text="@string/btn9"/>

            <Button android:id="@+id/btnMutilicacao"
                android:layout_weight="1"
                android:text="@string/btnMultiplicar"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btnQuatro"
                android:layout_weight="1"
                android:text="@string/btn4"/>
            <Button android:id="@+id/btnCinco"
                android:layout_weight="1"
                android:text="@string/btn5"/>
            <Button android:id="@+id/btnSeis"
                android:layout_weight="1"
                android:text="@string/btn6"/>
            <Button android:id="@+id/btnSubtracao"
                android:layout_weight="1"
                android:text="@string/btnMenos"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btnUm"
                android:layout_weight="1"
                android:text="@string/btn1"/>
            <Button android:id="@+id/btnDois"
                android:layout_weight="1"
                android:text="@string/btn2"/>
            <Button android:id="@+id/btnTres"
                android:layout_weight="1"
                android:text="@string/btn3"/>
            <Button android:id="@+id/btnSoma"
                android:layout_weight="1"
                android:text="@string/btnPlus"/>
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btnzero"
                android:layout_weight="1"
                android:text="@string/btn0"/>
            <Button android:id="@+id/btnPonto"
                android:layout_weight="1"
                android:text="@string/btnDot"/>
            <Button android:id="@+id/btnIgual"
                android:layout_weight="2"
                android:text="@string/btnEquals"
                android:layout_span="2"/>
        </TableRow>

    </TableLayout>



</LinearLayout>
